{
    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Mocha-webpack Tests",
        "program": "${workspaceFolder}/node_modules/mocha-webpack/bin/mocha-webpack",
        "args": [
            "webpack.config.json",
            "--full-trace",
            "--timeout",
            "999999",
            "--colors",
            "test/unit/*.ts"
        ],
        "sourceMaps": true,
        "env": {
            "NODE_ENV": "debug"
        },
        "internalConsoleOptions": "openOnSessionStart"
    }]
}